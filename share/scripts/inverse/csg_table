# method initialization
prepare simplex prepare_simplex.sh
prepare_single simplex prepare_simplex_single.sh
initstep simplex initialize_step_simplex.sh
initstep gromacs initialize_step_gromacs.sh

# the update step
update simplex update_simplex.sh

# add up the potential
add_pot simplex add_pot_simplex.sh

# table preparation
resample_simplex surften resample_simplex_surften.sh
resample_simplex density resample_simplex_density.sh

# simplex specific stuff
prepare_table simplex prepare_simplex_table.pl
pot lj12-6 pot_lj12-6.pl
pot lj12-4 pot_lj12-4.pl
par pot PAR_to_POT.pl
update simplex_single update_simplex_single.sh
update ftar_rdf update_ftar_rdf.pl
update ftar_surften update_ftar_surften.pl
update ftar_density update_ftar_density.pl
update ftar_merge update_ftar_merge.pl
update simplex_step update_simplex_step.pl

# gromacs scripts specific stuff
surften gromacs calc_surften_gromacs.sh
density gromacs calc_density_gromacs.sh
